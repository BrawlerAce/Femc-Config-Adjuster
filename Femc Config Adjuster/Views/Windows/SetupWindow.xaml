<Window
    x:Class="Femc_Config_Adjuster.Views.Windows.SetupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Femc_Config_Adjuster.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="FEMC Config Setup"
    Width="400"
    Height="200"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock
            FontSize="20"
            FontWeight="SemiBold"
            Text="Reloaded II" />
        <TextBlock Grid.Row="1" Text="Find and select your Reloaded II install (exe) to continue." />
        <Button
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            Click="Button_Click"
            Content="Select Reloaded II" />
    </Grid>
</Window>
